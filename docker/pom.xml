<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.forgerock.docker</groupId>
    <artifactId>docker</artifactId>
    <version>6.0.0</version>
    <packaging>pom</packaging>

    <description>
        Create ForgeRock Docker images. Run this with:
        mvn
        The default goal is set to docker:build
    </description>
    <profiles>
        <profile>
            <id>snapshot-releases</id>
            <properties>
                <openamVersion>6.0.0-SNAPSHOT</openamVersion>
                <opendjVersion>6.0.0-SNAPSHOT</opendjVersion>
                <openidmVersion>6.0.0-SNAPSHOT</openidmVersion>
                <openigVersion>6.0.0-SNAPSHOT</openigVersion>
                <releaseTag>6.0.0-SNAPSHOT</releaseTag>
            </properties>
        </profile>
        <profile>
            <id>gcr</id>
            <properties>
                <repo>gcr.io/engineering-devops</repo>
            </properties>
        </profile>
        <!-- mvn -Pbackport will use the 5.5.x product versions against the master helm artifacts -->
        <profile>
            <id>backport</id>
            <properties>
                <openamVersion>5.5.1</openamVersion>
                <opendjVersion>5.5.0</opendjVersion>
                <openidmVersion>5.5.0</openidmVersion>
                <openigVersion>5.5.0</openigVersion>
                <releaseTag>5.5.1</releaseTag>
            </properties>
        </profile>
    </profiles>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- Default versions to build  -->
        <openamVersion>6.0.0-M7</openamVersion>
        <opendjVersion>6.0.0-M120.1</opendjVersion>
        <openidmVersion>6.0.0-M7</openidmVersion>
        <openigVersion>6.0.0-M123</openigVersion>
        <registry>quay.io:443</registry>
        <releaseTag>6.0.0</releaseTag>
        <repo>quay.io/forgerock</repo>
    </properties>

 <repositories>
     <repository>
         <id>forgerock-private-releases</id>
         <name>ForgeRock Private Releases Repository</name>
         <url>https://maven.forgerock.org/repo/private-releases</url>
         <snapshots>
             <enabled>false</enabled>
         </snapshots>
     </repository>
     <repository>
         <id>forgerock-internal-releases</id>
         <name>ForgeRock Internal Releases Repository</name>
         <url>https://maven.forgerock.org/repo/internal-releases</url>
         <snapshots>
             <enabled>false</enabled>
         </snapshots>
     </repository>
     <repository>
         <id>forgerock-internal-snapshots</id>
         <name>ForgeRock Internal Snapshots Repository</name>
         <url>https://maven.forgerock.org/repo/internal-snapshots</url>
         <releases>
             <enabled>false</enabled>
         </releases>
     </repository>
 </repositories>

 <build>
     <defaultGoal>clean package docker:build</defaultGoal>
     <plugins>
         <plugin>
             <groupId>io.fabric8</groupId>
             <artifactId>docker-maven-plugin</artifactId>
             <version>0.24.0</version>

             <!-- List of images to build -->
                <configuration>
                    <sourceDirectory>.</sourceDirectory>

                    <pushRegistry>${registry}</pushRegistry>
                    <images>
                        <image>
                            <name>${repo}/openidm</name>
                            <build>
                                <dockerFileDir>openidm</dockerFileDir>
                                <tags>
                                    <tag>${openidmVersion}</tag>
                                    <tag>${releaseTag}</tag>
                                </tags>
                            </build>
                        </image>
                        <!-- We do not currently use this image.
                        <image>
                            <name>${repo}/openidm-postgres</name>
                            <build>
                                <dockerFileDir>openidm-postgres</dockerFileDir>
                                <tags>
                                    <tag>${openidmVersion}</tag>
                                    <tag>${releaseTag}</tag>
                                </tags>
                            </build>
                        </image>
                        -->
                        <image>
                            <name>${repo}/openam</name>
                            <build>
                                <dockerFileDir>openam</dockerFileDir>
                                <tags>
                                    <tag>${openamVersion}</tag>
                                    <tag>${releaseTag}</tag>
                                </tags>
                            </build>
                        </image>
                        <image>
                            <name>${repo}/amster</name>
                            <build>
                                <dockerFileDir>amster</dockerFileDir>
                                <tags>
                                    <tag>${openamVersion}</tag>
                                    <tag>${releaseTag}</tag>
                                </tags>
                            </build>
                        </image>
                        <image>
                            <name>${repo}/openig</name>
                            <build>
                                <dockerFileDir>openig</dockerFileDir>
                                <tags>
                                    <tag>${openigVersion}</tag>
                                    <tag>${releaseTag}</tag>
                                </tags>
                            </build>
                        </image>
                        <image>
                            <name>${repo}/opendj</name>
                            <build>
                                <dockerFileDir>opendj</dockerFileDir>
                                <tags>
                                    <tag>${opendjVersion}</tag>
                                    <tag>${releaseTag}</tag>
                                </tags>
                            </build>
                        </image>
                    </images>
                </configuration>
                <!-- End of images list -->
            </plugin>

            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>copy-forgerock-snapshot-software</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.forgerock.openidm</groupId>
                                    <artifactId>openidm-zip</artifactId>
                                    <version>${openidmVersion}</version>
                                    <type>zip</type>
                                    <outputDirectory>openidm</outputDirectory>
                                    <destFileName>openidm.zip</destFileName>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.forgerock.openidm</groupId>
                                    <artifactId>repo-config</artifactId>
                                    <version>${openidmVersion}</version>
                                    <classifier>postgresql</classifier>
                                    <type>zip</type>
                                    <outputDirectory>openidm-postgres</outputDirectory>
                                    <destFileName>db.zip</destFileName>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.forgerock.am</groupId>
                                    <artifactId>openam-server</artifactId>
                                    <version>${openamVersion}</version>
                                    <type>war</type>
                                    <outputDirectory>openam</outputDirectory>
                                    <destFileName>openam.war</destFileName>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.forgerock.am</groupId>
                                    <artifactId>openam-amster</artifactId>
                                    <version>${openamVersion}</version>
                                    <type>zip</type>
                                    <outputDirectory>amster</outputDirectory>
                                    <destFileName>amster.zip</destFileName>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.forgerock.opendj</groupId>
                                    <artifactId>opendj-server</artifactId>
                                    <version>${opendjVersion}</version>
                                    <type>zip</type>
                                    <outputDirectory>opendj</outputDirectory>
                                    <destFileName>opendj.zip</destFileName>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.forgerock.openig</groupId>
                                    <artifactId>openig-war</artifactId>
                                    <version>${openigVersion}</version>
                                    <type>war</type>
                                    <outputDirectory>openig</outputDirectory>
                                    <destFileName>openig.war</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>.</directory>
                            <includes>
                                <include>**/*.zip</include>
                                <include>**/*.war</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
        </plugins>
    </build>



</project>
